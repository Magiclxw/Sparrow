<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/turn_angle_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="角度"
            android:textSize="25dp"
            android:paddingVertical="55dp"
            android:textAlignment="center"
            ></TextView>
        <NumberPicker
            android:id="@+id/np_angle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            ></NumberPicker>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_center_angle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="回原点"
                android:textSize="25dp"
                ></Button>
            <Button
                android:id="@+id/btn_set_angle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="确定"
                android:textSize="25dp"
                ></Button>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save_as_forward"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:text="保存为正向按下角度"></Button>

    <Button
        android:id="@+id/btn_save_as_idle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="保存为空闲角度"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        ></Button>

    <Button
        android:id="@+id/btn_save_as_backword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"
        android:text="保存为反向按下角度"></Button>

</LinearLayout>