<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">
    <View
        android:id="@+id/linev"
        android:layout_width="2dp"
        android:layout_height="132dp"
        android:background="@color/black"
        android:layout_alignTop="@+id/linex"
        android:layout_alignLeft="@+id/linex"
        />
    <View
        android:id="@+id/linex"
        android:layout_width="390dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <View
        android:layout_width="2dp"
        android:layout_height="132dp"
        android:background="@color/black"
        android:layout_alignTop="@+id/linex"
        android:layout_alignRight="@+id/linex"
        />
    <View
        android:id="@+id/liney"
        android:layout_width="390dp"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:background="@color/white"
        android:layout_alignLeft="@+id/linex"
        android:layout_marginLeft="2dp"
        android:layout_alignRight="@+id/linex"
        android:layout_marginRight="2dp"
        android:layout_alignTop="@+id/linex"
        android:layout_marginTop="2dp"/>
    <TextView
        android:id="@+id/connect_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在线状态"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="#F44336"
        />
    <TextView
        android:id="@+id/power_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电源状态"
        android:layout_alignLeft="@id/linev"
        android:layout_alignTop="@+id/linex"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/power_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电量"
        android:layout_alignLeft="@id/linev"
        android:layout_alignTop="@+id/linex"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="150dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:id="@+id/wakeup_interval_text"
            android:text="唤醒间隔"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="25dp"
            android:textAlignment="center"
            ></TextView>

        <NumberPicker
            android:id="@+id/wakeup_interval_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"

            ></NumberPicker>

        <TextView
            android:id="@+id/wakeup_interval_text_hour"
            android:text="小时"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textAlignment="center"
            ></TextView>

        <NumberPicker
            android:id="@+id/wakeup_interval_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            ></NumberPicker>

        <TextView
            android:id="@+id/wakeup_interval_text_minute"
            android:text="分钟"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textAlignment="center"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/line1"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/wakeup_duration_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="唤醒时长"
            android:textSize="25dp"
            android:textAlignment="center"
            ></TextView>
        <NumberPicker
            android:id="@+id/wakeup_duration_minute"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            ></NumberPicker>
        <TextView
            android:id="@+id/wakeup_duration_text_minute"
            android:text="分钟"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textAlignment="center"
            ></TextView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative_power_ctrl"
        android:layout_alignTop="@+id/line2"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/power_contral_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电源控制"
            android:textSize="25dp"
            android:layout_marginLeft="17dp"
            ></TextView>

        <RadioGroup
            android:id="@+id/rd_power_ctrl"
            android:layout_alignTop="@+id/power_contral_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            >
            <RadioButton
                android:id="@+id/radio_no_exe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="不执行"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/radio_power_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="下次上线立即开机"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                ></RadioButton>
            <RadioButton
                android:id="@+id/radio_power_off"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="立即关机"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"
                ></RadioButton>

        </RadioGroup>

    </RelativeLayout>

    <Button
        android:id="@+id/save_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存配置"
        android:layout_alignTop="@+id/relative_power_ctrl"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        ></Button>

    <Button
        android:id="@+id/btn_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="工具"
        android:layout_alignTop="@+id/save_config"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/light_blue"
        ></Button>
    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        ></Button>

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/btn_tools"
        android:layout_marginTop="50dp"
        android:text="设置"
        ></Button>

</RelativeLayout>